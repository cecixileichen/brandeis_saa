<div class="data-form">
    <form action="/jobs/create" method="POST">
      <h2>Create a new job:</h2>

      <label for="inputTitle">Title</label>
      <input
        type="text"
        name="title"
        id="inputTitle"
        placeholder="Title"
        required
        autofocus
      />
      </br>

      <label for="inputCompany">Company</label>
      <input
        type="text"
        name="company"
        id="inputCompany"
        placeholder="Company"
        required
      />
      </br>

      <label for="inputLocation">Location</label>
      <input
        type="text"
        name="location"
        id="inputLocation"
        placeholder="Location"
        required
      />
      </br>

      <label for="inputDescription">Description</label>
      <input
        type="text"
        name="description"
        id="inputDescription"
        placeholder="Description"
        required
      />
      </br>

      <label for="inputRequirements">Requirements</label>
      <input
        type="text"
        name="requirements"
        id="inputRequirements"
        placeholder="Requirements"
        required
      />
      </br>

      <label for="inputSalary">Salary</label>
      <input
        type="number"
        name="salary"
        id="inputSalary"
        placeholder="Salary"
        required
      />
      </br>

      <label for="inputContactEmail">Contact Email</label>
      <input
        type="text"
        name="contactEmail"
        id="inputContactEmail"
        placeholder="Contact Email"
        required
      />
      </br>

      <label for="inputContactPhone">Contact Phone</label>
      <input
        type="text"
        name="contactPhone"
        id="inputContactPhone"
        placeholder="Contact Phone"
        required
      />
      </br>

      <label for="inputPostDate">Post Date</label>
      <input
        type="date"
        name="postDate"
        id="inputPostDate"
        placeholder="Post Date"
        required
      />
      </br>

      <label for="inputDeadlineDate">Deadline Date</label>
      <input
        type="date"
        name="deadlineDate"
        id="inputDeadlineDate"
        placeholder="Deadline Date"
        required
      />
      </br>
      
      <label for="inputIsActive">Active</label>
      <input
        type="boolean"
        name="isActive"
        id="inputIsActive"
        placeholder="Active"
        required
      />
      </br>

      <button type="submit">Create</button>
      
    </form>
  </div>
  