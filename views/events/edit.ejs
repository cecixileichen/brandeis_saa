<div class="data-form">
    <form method="POST" action="<%=`/events/${event._id}/update?_method=PUT`%>">
        <h2>Edit event:</h2>

      <label for="inputTitle">Title</label>
      <input
        type="text"
        name="title"
        id="inputTitle"
        value="<%= event.title %>"
        placeholder="Title"
        required
        autofocus
      />
      </br>

      <label for="inputDescription">Description</label>
      <input
        type="text"
        name="description"
        id="inputDescription"
        value="<%= event.description %>"
        placeholder="Description"
        required
      />
      </br>

      <label for="inputLocation">Location</label>
      <input
        type="text"
        name="location"
        id="inputLocation"
        value="<%= event.location %>"
        placeholder="Location"
        required
      />
      </br>

      <label for="inputStartDate">Start Date</label>
      <input
        type="date"
        name="startDate"
        id="inputStartDate"
        value="<%= event.startDate %>"
        placeholder="Start Date"
        required
      />
      </br>

      <label for="inputEndDate">End Date</label>
      <input
        type="date"
        name="endDate"
        id="inputEndDate"
        value="<%= event.endDate %>"
        placeholder="End Date"
        required
      />
      </br>

      <label for="inputIsOnLine">Online</label>
      <input
        type="boolean"
        name="isOnLine"
        id="inputIsOnLine"
        value="<%= event.isOnLine %>"
        placeholder="Online?"
      />
      </br>

      <label for="inputRegistrationLink">Registration Link</label>
      <input
        type="text"
        name="registrationLink"
        id="inputRegistrationLink"
        value="<%= event.registrationLink %>"
        placeholder="Registration Link"
      />
      </br>

      <label for="inputOrganizer">Organizer</label>
      <input
        type="mongoose.Schema.Types.ObjectId"
        name="organizer"
        id="inputOrganizer"
        value="<%= event.organizer %>"
        placeholder="Organizer"
        required
      />
      </br>

      <label for="inputAttendees">Attendees</label>
      <input
        type="mongoose.Schema.Types.ObjectId"
        name="attendees"
        id="inputAttendees"
        value="<%= event.attendees %>"
        placeholder="Attendees"
      />
      </br>

      <button type="submit">Update</button>
      
    </form>
  </div>
  