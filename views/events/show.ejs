<h1>Event information for <%= event.title %></h1>
<table class="table">
  <tr>
    <th>Title</th>
    <td><%= event.title %></td>
  </tr>

  <tr>
    <th>Description</th>
    <td><%= event.description %></td>
  </tr>

  <tr>
    <th>Location</th>
    <td><%= event.location %></td>
  </tr>

  <tr>
    <th>Start Date</th>
    <td><%= event.startDate %></td>
  </tr>

  <tr>
    <th>End Date</th>
    <td><%= event.endDate %></td>
  </tr>

  <tr>
    <th>Online</th>
    <td><%= locals.event.isOnLine %></td>
  </tr>

  <tr>
    <th>Registration Link</th>
    <td><%= event.registrationLink %></td>
  </tr>

  <tr>
    <th>Organizer</th>
    <td>
      <a href="<%=`/users/${event.organizer}`%>"> <%= event.organizer %> </a>
    </td>
  </tr>

  <tr>
    <th>Attendees</th>
    <td>
      <% event.attendees.forEach((element) => { %>
        <% console.log(element) %>
        <a href="<%=`/users/${element}`%>"> <%= element %> </a>
      <% }) %>
    </td>
  </tr>

</table>

</br>

<form action="<%=`/events/${event._id}/register`%>" method="POST">
  <label>Enter email to register: </label>
  <input
        type="text"
        name="email"
        id="inputEmail"
        placeholder="Email"
        autofocus
    />
    <button type="submit">Register</button>
</form>

<div>
  <a href="/events">View all events</a>
</div>
<div>
  <a href="<%=`/events/${event._id}/edit`%>">Edit event Details</a>
</div>
<div>
  <a
    href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Are you sure you want to delete this event?')"
    >
        Delete
    </a>
</div>
