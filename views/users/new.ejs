<div class="data-form">
    <form action="/users/create" method="POST">
      <h2>Create a new user:</h2>

      <label for="inputName">Name</label>
      <input
        type="text"
        name="name"
        id="inputName"
        placeholder="Full Name"
        required
        autofocus
      />
      </br>

      <label for="inputEmail">Email address</label>
      <input
        type="text"
        name="email"
        id="inputEmail"
        placeholder="Email address"
        required
      />
      </br>

      <label for="inputPassword">Password</label>
      <input
        type="text"
        name="password"
        id="inputPassword"
        placeholder="Password"
        required
      />
      </br>

      <label for="inputRole">Role</label>
      <input
        type="text"
        name="role"
        id="inputRole"
        placeholder="Role"
        required
      />
      </br>

      <label for="inputGraduationYear">Graduation Year</label>
      <input
        type="number"
        name="graduationYear"
        id="inputGraduationYear"
        placeholder="Graduation Year"
        required
      />
      </br>

      <label for="inputJob">Job</label>
      <input
        type="text"
        name="job"
        id="inputJob"
        placeholder="Job"
      />
      </br>

      <label for="inputCompany">Company</label>
      <input
        type="text"
        name="company"
        id="inputCompany"
        placeholder="Company"
      />
      </br>

      <label for="inputCity">City</label>
      <input
        type="text"
        name="city"
        id="inputCity"
        placeholder="City"
      />
      </br>

      <label for="inputState">State</label>
      <input
        type="text"
        name="state"
        id="inputState"
        placeholder="State"
      />
      </br>

      <label for="inputCountry">Country</label>
      <input
        type="text"
        name="country"
        id="inputCountry"
        placeholder="Country"
      />
      </br>
      
      <label for="inputZipCode">Zip Code</label>
      <input
        type="number"
        name="zipCode"
        id="inputZipCode"
        pattern="\d*"
        placeholder="Zip Code"
      />
      </br>

      <label for="inputBio">Bio</label>
      <input
        type="text"
        name="bio"
        id="inputBio"
        placeholder="Bio"
      />
      </br>
      
      <label for="inputInterest">Interest</label>
      <input
        type="text"
        name="interest"
        id="inputInterest"
        placeholder="Interest"
      />
      </br>

      <button type="submit">Sign in</button>
      
    </form>
  </div>
  